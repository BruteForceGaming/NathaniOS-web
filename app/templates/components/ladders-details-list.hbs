{{#if (not-eq @title "")}}
  <h2 class="h3">{{@title}}</h2>
{{/if}}

<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>
          #
        </th>
        <th>
          ID
        </th>
        <th>
          MMR
        </th>
        <th>
          Wins
        </th>
        <th>
          Losses
        </th>
        <th>
          Players
        </th>
      </tr>
    </thead>
    <tbody>
      {{#if @model.isFulfilled}}
        {{#each @model as |ladder|}}
          {{#with (my-team ladder.teams @profile) as |myTeam|}}
            <tr>
              <td>
                {{myTeam.rank}}
              </td>
              <td>
                {{#link-to "ladders.view" ladder.id}}{{ladder.id}}{{/link-to}}
              </td>
              <td>
                {{myTeam.mmr}}
              </td>
              <td>
                {{myTeam.Wins}}
              </td>
              <td>
                {{myTeam.Losses}}
              </td>
              <td>
                {{#each myTeam.teamMembers as |member|}}
                  {{#link-to "profiles.view" member.playerId}}
                    {{member.displayName}} <small>({{member.favoriteRace}})</small>
                  {{/link-to}}
                {{/each}}
              </td>
            </tr>
          {{/with}}
        {{/each}}
      {{/if}}
    </tbody>
  </table>
</div>
