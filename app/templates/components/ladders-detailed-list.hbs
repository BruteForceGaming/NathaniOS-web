{{#if (not-eq @title "")}}
  <h2 class="h3">{{@title}}</h2>
{{/if}}
<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>
          #
        </th>
        <th>
          League
        </th>
        <th>
          ID
        </th>
        <th>
          Wins
        </th>
        <th>
          Losses
        </th>
        <th>
          Players
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |ladder|}}
        <tr>
          <td>
            {{ladder.Rank}}
          </td>
          <td>
            {{ladder.Team.localizedGameMode}} {{ladder.leagueName}}
          </td>
          <td>
            <button class="badge badge-secondary" {{action (transition-to "ladders.view" ladder.ladderId) on=click}}>
              {{ladder.ladderId}}
            </button>
          </td>
          <td>
            {{ladder.Wins}}
          </td>
          <td>
            {{ladder.Losses}}
          </td>
          <td>
            {{#each ladder.Team.Members as |member|}}
              <button class="badge badge-primary" {{action (transition-to "profiles.view" member.playerId) on=click}}>
                {{member.Name}} ({{member.favoriteRace}})
              </button>
            {{/each}}
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
