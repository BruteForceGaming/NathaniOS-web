{{#if (not-eq @title "")}}
  <h2 class="h3">{{@title}}</h2>
{{/if}}
<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>
          #
        </th>
        <th>
          League
        </th>
        <th>
          ID
        </th>
        <th>
          Wins
        </th>
        <th>
          Losses
        </th>
        <th>
          Players
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each @model as |ladder|}}
        <tr>
          <td>
            {{ladder.Rank}}
          </td>
          <td>
            {{ladder.team.localizedGameMode}} {{ladder.leagueName}}
          </td>
          <td>
            {{#link-to "ladders.view" ladder.ladderId}}{{ladder.ladderId}}{{/link-to}}
          </td>
          <td>
            {{ladder.Wins}}
          </td>
          <td>
            {{ladder.Losses}}
          </td>
          <td>
            {{#each ladder.Team.Members as |member|}}
              {{#link-to "profiles.view" member.playerId}}
                {{member.Name}} <small>({{member.favoriteRace}})</small>
              {{/link-to}}
            {{/each}}
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
